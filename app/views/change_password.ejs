<!-- <!DOCTYPE html> -->
<div class="container">
	<div class = "col-md-6 hoz_padding_40">
		<h3 class = "text-center"> Change Password </h3>

		<p> Enter new password to change the password. </p>

		<form id="form_change_password" method = "post" action = "/authen/change_password">
			<div class="form-group row">
				<label for="old_password" class="col-sm-4 col-form-label"> Old Password </label>
				<div class="col-sm-8">
					<input type="password" class="form-control" name="old_password" id="old_password" placeholder="Old Password" />
				</div>
			</div>

			<div class="form-group row">
				<label for="new_password" class="col-sm-4 col-form-label"> New Password </label>
				<div class="col-sm-8">
					<input type="password" class="form-control" name="new_password" id="new_password" placeholder="New Password" />
				</div>
			</div>

			<div class="form-group row">
				<label for="retype_password" class="col-sm-4 col-form-label"> Retype Password </label>
				<div class="col-sm-8">
					<input type="password" class="form-control" name="retype_password" id="retype_password" placeholder="Retype Password" />
				</div>
			</div>

			<% if( typeof errors !== 'undefined' ) { %>
				<div class="alert alert-danger">
					<% for(let msg in errors) { %>
						<%= errors[msg] %>
						<br />
					<% } %>
				</div>
			<% }%>

			<div class="form-group row">
				<div class="col-sm-10">
					<input type="hidden" name = "_method" value = "PUT" />
					<button type="submit" class="btn btn-primary"> Change Password </button>
				</div>
			</div>
		</form>
	</div>

	<script>
		$(() => {
			$('#form_reset_password').validate({
				rules: {
					 new_password: {
						required: true,
						minlength:6,
						maxlength:30
					},
					retype_password: {
						equalTo: "#new_password"
					}
				},
				highlight: (element) => {
					$(element).closest('.control-group').removeClass('success').addClass('error');
				},
				success: (element) => {
					element
					.addClass('valid')
					.closest('.control-group').removeClass('error').addClass('success');
				}
			});
		});
	</script>
</div>