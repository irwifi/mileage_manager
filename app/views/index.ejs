<!-- <!DOCTYPE html> -->
<%# including the head section of the HTML document %>
<%- include('head') -%>

<%# body section of HTML %>
	<body>
		<%# including the page header %>
		<%- include('header') -%>

		<!-- <- include('nav_path') -%> -->
		<% if(typeof message !== 'undefined' )  {%>
			<% for(msg in message) {%>
				<p><%- message[msg] %></p>
			<% } %>					
		<% } else { %>
			<%- include(page) -%>
		<% } %>
	</body>
</html>

<% if(typeof jump !== 'undefined' && jump === 'readings_list_section')  {%>
	<script>
		window.location.hash = '#readings_list_section';
	</script>
<% } %>

<script>
	const redirect_form = (method, location, params) => {
		const form = $('<form></form>');
		form.attr("method", method);
		form.attr("action", location);

		$.each( params, ( key, value ) => {
			const field = $('<input></input>');

			field.attr("type", "hidden");
			field.attr("name", key);
			field.attr("value", value);

			form.append(field);
		});
		$(form).appendTo('body').submit();
	};
</script>
